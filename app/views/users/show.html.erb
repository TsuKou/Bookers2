<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: message_type %>
<% end %>


  <div class= "container px-5 px-ms-0">
    <div class= "row">
      <div class= "col-md-3">
        <%= render 'users/user_info', user: @user %>

        <%= render 'users/user_edit', user: @user %>

        <%= render 'books/newbook', book: @book %>
      </div>

      <h2>Books</h2>
        <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </div>
    </div>