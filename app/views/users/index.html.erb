  <div class= "container px-5 px-ms-0">
    <div class= "row">
      <div class= "col-md-3">

      </div>
      <div class= "col-md-8 offset-md-1">

        <h2>Users</h2>
          <table>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image(80,80) %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              <% end %>
              </tr>
            </tbody>
      </div>
          </table>

