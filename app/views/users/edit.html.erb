<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>

      <div class="form-group">
        <label for="user_edit_Name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"user_edit_tName", placeholder:"名前" %>
      </div>

      <div class="form-group">
        <label for="user_edit_Image">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/" %>
      </div>

      <div class="form-group">
        <label for=user_edit_Introduction>Introduction</label><br>
          <%= f.text_area :introduction, placeholder: "自己紹介/説明文" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary btn-sm" %>
      </div>
        <% end %>
    </div>
  </div>
</div>