<% if @book.errors.any? %>
  <%= @book.errors.count "errors" %>prohibited this book from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class= "container px-5 px-ms-0">
    <div class= "row">
      <div class= "col-md-3">
        <%= render 'users/user_info', user: @book.user %>

        <%= render 'users/user_edit', user: @book.user %>

        <%= render 'books/newbook', book: @book_new %>
      </div>

      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <% if @book.user.profile_image.attached? %>
              <%= image_tag @book.user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %><br>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success btn-sm" %>
          </td>
          <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger btn-sm" %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
    </div>
  </div>