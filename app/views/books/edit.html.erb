      <div class="form-group">
        <label for="book_body_edit">Opinion</label><br>
        <%= f.text_area :body, :class => "book_body_edit" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-success btn-sm"%>
      </div>

      <% end %>

