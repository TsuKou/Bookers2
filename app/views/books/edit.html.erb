<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
    <h1>Editing Book</h1>

    <div class="error">
      <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

      <%= form_with model: @book, method: :patch do |f| %>
      <div class="form-group">
        <label for="book_title_edit">Title</label><br>
        <%= f.text_field :title, :class => "book_title_edit" %>
      </div>

      <div class="form-group">
        <label for="book_body_edit">Opinion</label><br>
        <%= f.text_area :body, :class => "book_body_edit" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-success btn-sm"%>
      </div>

      <% end %>

    <%= link_to "Show", book_path(@book.id) %>

|

    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>